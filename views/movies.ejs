<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Movies</title>
</head>

<body>
    <header>
        <h1>Movies</h1>
        <main>
            <% movies.forEach((movie)=> {%>
                <div>
                    <h2>
                        <%= movie.title %>
                    </h2>
                    <img src="<%= movie.img %>" alt="<%= movie.title %>">
                    <p>
                        <%= movie.genre %>
                    </p>
                    <p>
                        <%= movie.year %>
                    </p>
                </div>
                <% }) %>
        </main>
    </header>

</body>

</html>