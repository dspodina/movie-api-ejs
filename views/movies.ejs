<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Movies</title>
</head>

<body>
    <header>
        <h1>Movies</h1>
        <%- include("./includes/nav.ejs")%>
    </header>
    <main>
        <div class="main-container">
            <% movies.forEach((movie)=> { %>
                <div class="movie-container">
                    <h2>
                        <%= movie.title %>
                    </h2>
                    <p>
                        <%= movie.genre %>, <%= movie.year %>
                    </p>
                    <img src="<%= movie.img %>" alt="<%= movie.title %>">
                    <button>
                        <a href="/api/movies/<%= movie.id %>">Details</a>
                    </button>
                    <button>
                        <a href="/api/update-form/<%= movie.id %>">Update</a>
                    </button>
                    <button>
                        <a href="/api/delete/<%= movie.id %>">Delete</a>
                    </button>
                </div>
            </div>
                <% }) %>
    </main>
</body>

</html>