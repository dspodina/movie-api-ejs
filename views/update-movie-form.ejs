<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/style.css" />
        <title>Update Movie</title>
    </head>
    <body>
        <header>
            <h1>Update Movie</h1>
            <%- include("./includes/nav.ejs")%>
        </header>

        <form action="/api/update/<%= movie.id %>" method="POST">
            <label for="title">Title</label>
            <input
                type="text"
                id="title"
                name="title"
                value="<%=movie.title %>"
                required
            />
            <br />
            <label for="genre">Genre</label>
            <input
                type="text"
                id="genre"
                name="genre"
                value="<%=movie.genre%>"
                required
            />
            <br />
            <label for="Year">Year</label>
            <input
                type="text"
                id="year"
                name="year"
                value="<%=movie.year %>"
                required
            />
            <br />
            <label for="img">Image URL</label>
            <input
                type="url"
                id="img"
                name="img"
                value="<%=movie.img %>"
                required
            />
            <br />
            <button type="submit">Submit</button>
        </form>
    </body>
</html>
